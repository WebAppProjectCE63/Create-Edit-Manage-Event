@model WebApplicationProject.Models.ProfilePageViewModel

<link rel="stylesheet" href="~/css/style.css">

@section Banner{

        <div id="pagebanner">
            <h1>Profile</h1>
            <p>รายละเอียดข้อมูลส่วนบุคคล</p>
        </div>

    <div id="profilebanner">
        <div id="profileimg">
            <img src=@Model.UserInfo.Image alt="Profile" id="prevImg">
        </div>
        <div id="profileinfo">
            <h1>
                <span id="prevFname">@Model.UserInfo.FName</span>
                <span id="prevSname">@Model.UserInfo.SName</span>
            </h1>
            <p id="prevEmail">@Model.UserInfo.Email</p>
            <div class="moreinfo">
                <div class="sex">
                    <h3>Sex</h3>
                    <p>@Model.UserInfo.Gender</p>
                </div>
                <div class="age">
                    <h3>Age</h3>
                        @{
                            var today = DateTime.Today;
                            var age = today.Year - Model.UserInfo.Birthday.Year;
                            if (Model.UserInfo.Birthday.Date > today.AddYears(-age))
                            {
                                age--;
                            }
                        }
                        <p>@age</p>
                </div>
            </div>

                <button class="edit-btn" onclick="openEditModal()">Edit Profile</button>
        </div>
    </div>
    <div class="activitycolumn">
        <h2>Recent Host Activity</h2>
        <p>กิจกรรมที่เคยสร้าง</p>
        <div class="activitylist">
    @foreach (var ev in Model.HostedEvents)
                    {
                        <div class="activity">
                            <div class="activityimg">
                                <img src=@ev.Image alt="Event">
                            </div>
                            <div class="activityinfo">
                            <h2>@ev.Title</h2>
                            <p>@ev.Description</p>
                                <div class="eventinfo">
                                    <div class="taglist">
                                        @if (ev.Tags != null && ev.Tags.Any())
                                        {
                                            @foreach (var tagName in ev.Tags)
                                            {
                                                <span class="tag">#@tagName</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="tag">ไม่มีแท็ก</span>
                                        }
                                    </div>
                                    <div class="datetime">
                                    <span class="time">>@ev.DateTime.ToString("HH:mm")</span>
                                    <span class="date">@ev.DateTime.ToString("dd")</span>   
                                    <span class="date">@ev.DateTime.ToString("MMM")</span>     
                                    <span class="date">@ev.DateTime.ToString("yyyy")</span>
                                    </div>
                                </div>
                                <div class="member-row">
                                    <div class="avatars">
                                        <img src="https://i.pravatar.cc/150?img=11" alt="User 1">
                                        <img src="https://i.pravatar.cc/150?img=12" alt="User 2">
                                        <img src="https://i.pravatar.cc/150?img=13" alt="User 3">
                                        <span class="more-users">+1</span>
                                    </div>
                                <button class="member-count">@ev.CurrentParticipants / @ev.MaxParticipants Members</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
    </div>
    <div class="activitycolumn">
        <h2>Recent Join Activity</h2>
        <p>กิจกรรมที่เคยเข้าร่วม</p>
        <div class="activitylist">
                @foreach (var ev in Model.JoinedEvents)
                {
                    <div class="activity">
                        <div class="activityimg">
                            <img src=@ev.Image alt="Event">
                        </div>
                        <div class="activityinfo">
                            <h2>@ev.Title</h2>
                            <p>@ev.Description</p>
                            <div class="eventinfo">
                                <div class="taglist">
                                    @if (ev.Tags != null && ev.Tags.Any())
                                    {
                                        @foreach (var tagName in ev.Tags)
                                        {
                                            <span class="tag">#@tagName</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="tag">ไม่มีแท็ก</span>
                                    }
                                </div>
                                <div class="datetime">
                                    <span class="time">>@ev.DateTime.ToString("HH:mm")</span>
                                    <span class="date">@ev.DateTime.ToString("dd")</span>
                                    <span class="date">@ev.DateTime.ToString("MMM")</span>
                                    <span class="date">@ev.DateTime.ToString("yyyy")</span>
                                </div>
                            </div>
                            <div class="member-row">
                                <div class="avatars">
                                    <img src="https://i.pravatar.cc/150?img=11" alt="User 1">
                                    <img src="https://i.pravatar.cc/150?img=12" alt="User 2">
                                    <img src="https://i.pravatar.cc/150?img=13" alt="User 3">
                                    <span class="more-users">+1</span>
                                </div>
                                <button class="member-count">@ev.CurrentParticipants / @ev.MaxParticipants Members</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
    </div>
    <div class="rating">
        <h1>Rating</h1>
        <div class="ratinglist">
            @foreach (var rw in Model.Reviews)
            {
            <div class="reviewblock">
                <div class="stars">
                            @for (int i = 0; i < rw.stars; i++)
                            {
                                <span>★</span>
                            }
                            @for (int i = rw.stars; i < 5; i++)
                            {
                                <span>☆</span>
                            }
                </div>
                <h2>@rw.reviewtitle</h2>
                <p class="reviewbody">@rw.reviewbody</p>
                <div class="reviewprofile">
                    <img src=@rw.Author.Image alt="Profile">
                    <div class="reviewname">
                        <h4>@rw.Author.FName</h4>
                        <p>@rw.Author.SName</p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
        <div id="editProfileModal" class="modal-overlay">
        <div class="modal-content ">
            <h1>Edit Profile</h1>
            <div class="exampleprofile">
                <div class="profile-rect">
                    <img class="preview-img" src="@Model.UserInfo.Image" alt="Rectangle Profile">
                </div>

                <div class="profile-circle">
                    <img class="preview-img" src="@Model.UserInfo.Image" alt="Circle Profile">
                </div>
            </div>
            <form asp-action="UpdateProfile" asp-controller="Profile" method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@Model.UserInfo.Id" />
                <div class="modal-body">
                    <label>First Name</label>
                    <input type="text" name="FName" id="inputFname" value="@Model.UserInfo.FName" class="form-control" />
                    <label>Last Name</label>
                    <input type="text" name="SName" id="inputSname" value="@Model.UserInfo.SName" class="form-control" />
                    <label>Profile Image</label>
                    <input type="file" name="uploadImage" id="inputImg" class="form-control" />
                    <label>Email</label>
                    <input type="text" name="Email" id="inputEmail" value="@Model.UserInfo.Email" class="form-control" />
                </div>

                <div> 
                    <button class="edit-btn" id="btnRst" onclick="closeEditModal()">Cancel</button>
                    <button type="submit" class="edit-btn" onclick="closeEditModal()">Save</button>
                </div>
               
            </form>
       
        </div>
        </div>
    <script src="~/js/app.js"></script>
    <script src="~/js/editprofile.js"></script>
}