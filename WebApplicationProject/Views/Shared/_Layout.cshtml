<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplicationProject</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplicationProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="navbar">
            <div id="weblogo">
                <img src="https://placehold.co/200x50/333333/ffffff?text=MY+LOGO" alt="Logo">
            </div>

            <div id="navitem">
                <ul>
                    <li><a href="#home">Home</a></li>
                    <li><a href="#news">Event</a></li>
                    <li><a href="#contact">Add Event</a></li>
                    <li><a href="#about">Chat</a></li>
                </ul>
            </div>

            <div id="navprofile">
                <div id="profilename">
                    <h4>ชื่อ</h4> <p>นามสกุล</p>
                </div>
                <img src="https://ui-avatars.com/api/?name=John+Doe&background=random&color=fff&size=128" alt="Profile">
            </div>
        </nav>
    </header>
    @await RenderSectionAsync("Banner", required: false)
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2569 - WebApplicationProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
