@model IEnumerable<WebApplicationProject.Models.Event>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Event Page</title>

    <link rel="stylesheet" href="~/css/myevent.css">
</head>
@section Banner {
<body>
    <div id="event-header">
        <h1>Event</h1>
        <p>Event</p>
    </div>

    <div class="content-container bg-gray">
        <div class="calendar-wrapper">
            <div class="calendar-card">
                <div class="calendar-header">
                    <button class="nav-btn" id="prevMonth"><i class="fa-solid fa-chevron-left"></i></button>
                    <div class="date-selectors">
                        <select id="monthSelect">
                            <option value="0">Jan</option>
                            <option value="1">Feb</option>
                            <option value="2">Mar</option>
                            <option value="3">Apr</option>
                            <option value="4">May</option>
                            <option value="5">Jun</option>
                            <option value="6">Jul</option>
                            <option value="7">Aug</option>
                            <option value="8">Sep</option>
                            <option value="9">Oct</option>
                            <option value="10">Nov</option>
                            <option value="11">Dec</option>
                        </select>
                        <select id="yearSelect">
                            <option value="2025">2025</option>
                            <option value="2026" selected>2026</option>
                        </select>
                    </div>
                    <button class="nav-btn" id="nextMonth"><i class="fa-solid fa-chevron-right"></i></button>
                </div>

                <div class="calendar-body">
                    <div class="day-names">
                        <span>Su</span><span>Mo</span><span>Tu</span><span>We</span><span>Th</span><span>Fr</span><span>Sa</span>
                    </div>
                    <div class="days-grid" id="calendarGrid">
                        <span class="text-muted"></span> <span>1</span> <span>2</span> <span>3</span> <span>4</span> <span>5</span> <span>6</span>
                        <span>7</span> <span>8</span> <span>9</span> <span>10</span> <span>11</span> <span>12</span> <span>13</span>
                        <span>14</span> <span>15</span> <span>16</span> <span>17</span> <span>18</span> <span>19</span> <span>20</span>
                        <span>21</span> <span>22</span> <span>23</span> <span>24</span> <span>25</span> <span>26</span> <span>27</span>
                        <span>28</span> <span>29</span> <span>30</span> <span class="text-muted">1</span> <span class="text-muted">2</span> <span class="text-muted">3</span> <span class="text-muted">4</span>
                    </div>
                </div>
            </div>

            <div class="filter-bar">
                <div class="search-input">
                    <span class="placeholder">Value</span>
                </div>
                <div class="sort-filter">
                    <span>Sort By</span>
                    <select class="pill-select"><option>Value</option></select>
                    <button class="pill-btn">Filter <i class="fa-solid fa-filter"></i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="content-container">
        <div class="recommend-section">
            <div class="section-title">
                <h2>Recommended Events</h2>
                <p>Subheading</p>
            </div>
            @foreach (var ev in Model)
                    {
                        <div class="event-card">
                            <div class="card-img placeholder-img"></div>
                            <div class="card-content">
                            <h3>@ev.Title</h3>
                            <p class="desc">@ev.Description</p>
                                <div class="tags">
                                @if (ev.Tag != null && ev.Tag.Any())
                                {
                                    @foreach (var tagName in ev.Tag)
                                    {
                                        <span class="tag black">#@tagName</span>
                                    }
                                }
                                else
                                {
                                    <span class="tag dark">ไม่มีแท็ก</span>
                                }
                                </div>
                                <div class="time-control">
                                <select><option>@ev.DateTime.ToString("HH:mm")</option></select>
                                <input type="text" placeholder="@ev.DateTime.ToString("dd")" class="date-box">
                                <input type="text" placeholder="@ev.DateTime.ToString("MMM")" class="date-box">
                                <input type="text" placeholder="@ev.DateTime.ToString("yyyy")" class="date-box">
                                </div>
                                <div class="card-footer">
                                    <div class="actions">
                                        <button class="btn-gray">View Info</button>
                                        <div class="avatars">
                                            <img src="https://ui-avatars.com/api/?name=A&background=orange" class="avatar-sm">
                                            <img src="https://ui-avatars.com/api/?name=B&background=blue" class="avatar-sm">
                                            <img src="https://ui-avatars.com/api/?name=C&background=green" class="avatar-sm">
                                            <span class="avatar-sm more">+1</span>
                                        </div>
                                    </div>
                                <div class="members">@ev.CurrentParticipants / @ev.MaxParticipants Members</div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="event-card">
                <div class="card-img placeholder-img"></div>
                <div class="card-content">
                    <h3>Event</h3>
                    <p class="sub-desc">ชื่อเจ้าของกิจกรรม</p>
                    <p class="desc">คำอธิบาย / ข้อจำกัดของกิจกรรม</p>

                    <div class="tags" style="margin-top: 10px;">
                        <span class="tag black">Label</span>
                        <span class="tag dark">Tag</span>
                    </div>
                    <div class="time-control">
                        <select><option>เวลา</option></select>
                        <input type="text" placeholder="วัน" class="date-box">
                        <input type="text" placeholder="เดือน" class="date-box">
                        <input type="text" placeholder="ปี" class="date-box">
                    </div>

                    <div class="card-footer">
                        <button class="btn-gray ">Join</button>
                        <div class="members">30/60 Members</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/myevent.js"></script>
</body>
}
</html>